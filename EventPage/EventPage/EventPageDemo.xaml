<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventPage.EventPageDemo"
             Title="EventPageDemo">
    <StackLayout>
        <Button
            x:Name="btnTest"
            Text="Click"
            Clicked="btnTest_Clicked"/>

        <ImageButton
            Source="dotnet_bot.png"
            Clicked="btnTest_Clicked"/>

        <RadioButton
            CheckedChanged="RadioButton_CheckedChanged"
            Content="Opcion 1"
            GroupName="Grupo1"/>

        <RadioButton
            CheckedChanged="RadioButton_CheckedChanged"
            Content="Opcion 2"
            GroupName="Grupo1"/>

        <SearchBar
            x:Name="SearchControl"
            SearchButtonPressed="SearchControl_SearchButtonPressed"/>

        <SwipeView>
            <SwipeView.LeftItems>
                <SwipeItems>
                    <SwipeItem
                        BackgroundColor="Aqua"
                        IconImageSource="dotnet_bot.png"
                        Invoked="SwipeItem_Invoked"
                        Text="Nuevo"/>
                    <SwipeItem
                        BackgroundColor="Aqua"
                        IconImageSource="dotnet_bot.png"
                        Invoked="SwipeItem_Invoked"
                        Text="Nuevo"/>
                </SwipeItems>
            </SwipeView.LeftItems>
            <!-- Add a content view inside SwipeView to avoid empty content error -->
            <Grid HeightRequest="50"/>
        </SwipeView>

        <Slider
            x:Name="slider"
            Minimum="0"
            Maximum="10"
            MinimumTrackColor="Yellow"
            MaximumTrackColor="Green"
            ThumbColor="Red"
            ValueChanged="slider_ValueChanged"/>

        <Label
            x:Name="lblSlider"/>

        <Stepper
            x:Name="stepper"
            ValueChanged="stepper_ValueChanged"
            Maximum="10"
            Minimum="2"
            Increment="2"
            />

        <Switch IsToggled="True"/>

        <DatePicker/>
        <TimePicker/>


    </StackLayout>
</ContentPage>